<% content_for :title, "Button - Lucky  UI" %>

<div class="flex flex-col pb-16">
    <span class="text-sm mb-2 text-zinc-500">Controls</span>
    <h1 class="text-4xl font-bold mb-4 text-zinc-900">Button</h1>
    <p>Outline button is default. Have to add tailwind safelist comment for colors in Rails.</p>
</div>

<div class="pb-16">
    <!-- Main visual styles -->
    <div class="flex flex-wrap items-center justify-center gap-3 mb-8">
        <%= render(ButtonComponent.new) { "Outline" } %>
        <%= render(ButtonComponent.new(variant: :solid)) { "Solid" } %>
        <%= render(ButtonComponent.new(variant: :ghost)) { "Ghost" } %>
    </div>
    <!-- Disabled examples -->
    <div class="flex flex-wrap items-center justify-center gap-3">
        <%= render(ButtonComponent.new(disabled: true)) { "Outline" } %>
        <%= render(ButtonComponent.new(variant: :solid, disabled: true)) { "Solid" } %>
        <%= render(ButtonComponent.new(variant: :ghost, disabled: true)) { "Ghost" } %>
    </div>
</div>

<div class="pb-16">
    <!-- Solid color -->
    <div class="flex flex-wrap items-center justify-center gap-3 max-w-3xl">
        <%= render(ButtonComponent.new(variant: :color, color: :red, color_variant: :solid)) { "Red" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :orange, color_variant: :solid)) { "Orange" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :amber, color_variant: :solid)) { "Amber" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :yellow, color_variant: :solid)) { "Yellow" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :lime, color_variant: :solid)) { "Lime" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :green, color_variant: :solid)) { "Green" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :emerald, color_variant: :solid)) { "Emerald" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :teal, color_variant: :solid)) { "Teal" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :cyan, color_variant: :solid)) { "Cyan" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :sky, color_variant: :solid)) { "Sky" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :blue, color_variant: :solid)) { "Blue" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :indigo, color_variant: :solid)) { "Indigo" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :violet, color_variant: :solid)) { "Violet" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :purple, color_variant: :solid)) { "Purple" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :fuchsia, color_variant: :solid)) { "Fuchsia" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :pink, color_variant: :solid)) { "Pink" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :rose, color_variant: :solid)) { "Rose" } %>
    </div>
    <!-- Soft color -->
    <div class="flex flex-wrap items-center justify-center gap-3 mt-6 max-w-3xl">
        <%= render(ButtonComponent.new(variant: :color, color: :red, color_variant: :soft)) { "Red" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :orange, color_variant: :soft)) { "Orange" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :amber, color_variant: :soft)) { "Amber" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :yellow, color_variant: :soft)) { "Yellow" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :lime, color_variant: :soft)) { "Lime" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :green, color_variant: :soft)) { "Green" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :emerald, color_variant: :soft)) { "Emerald" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :teal, color_variant: :soft)) { "Teal" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :cyan, color_variant: :soft)) { "Cyan" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :sky, color_variant: :soft)) { "Sky" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :blue, color_variant: :soft)) { "Blue" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :indigo, color_variant: :soft)) { "Indigo" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :violet, color_variant: :soft)) { "Violet" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :purple, color_variant: :soft)) { "Purple" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :fuchsia, color_variant: :soft)) { "Fuchsia" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :pink, color_variant: :soft)) { "Pink" } %>
        <%= render(ButtonComponent.new(variant: :color, color: :rose, color_variant: :soft)) { "Rose" } %>
    </div>
</div>

<div class="pb-16">
    <!-- Sizes -->
    <div class="flex flex-wrap items-end justify-center gap-3">
        <%= render(ButtonComponent.new(size: :small)) { "Small" } %>
        <%= render(ButtonComponent.new(size: :medium)) { "Medium" } %>
        <%= render(ButtonComponent.new) { "Default" } %>
        <%= render(ButtonComponent.new(size: :large)) { "Large" } %>
    </div>
</div>

<div class="pb-16">
    <!-- Full width buttons -->
    <div class="flex flex-wrap items-center justify-center gap-3 max-w-xs mx-auto">
        <%= render(ButtonComponent.new(full_width: true)) { "Send invite" } %>
        <%= render(ButtonComponent.new(full_width: true, variant: :solid)) do %>
        <%= icon "apple-fill", library: "logos", class: "size-4 -ms-1" %>
        <span>Login with Apple</span>
        <% end %>
    </div>
</div>

<div class="pb-16">
    <!-- Buttons with icons -->
    <div class="flex flex-wrap items-center justify-center gap-3">
        <!-- Only icon inside -->
        <%= render(ButtonComponent.new(icon_only: true)) do %>
        <%= icon "copy", class: "size-4" %>
        <% end %>
        <!-- Icon on left -->
        <%= render(ButtonComponent.new) do %>
        <%= icon "download", class: "size-4 -ms-1" %>
        <span>Export</span>
        <% end %>
        <!-- Icon on right -->
        <%= render(ButtonComponent.new(variant: :solid)) do %>
        <span>Visit Google</span>
        <%= icon "arrow-up-right", class: "size-4 -me-1" %>
        <% end %>
        <!-- Icon on left and right -->
        <%= render(ButtonComponent.new) do %>
        <%= icon "mail", class: "size-4 -ms-1" %>
        <span>Email</span>
        <%= icon "arrow-right", class: "size-4 -me-1" %>
        <% end %>
        <!-- Only icon inside (ghost) -->
        <%= render(ButtonComponent.new(variant: :ghost, icon_only: true)) do %>
        <%= icon "x", class: "size-4" %>
        <% end %>
    </div>
</div>

<div class="pb-16">
    <!-- Button groups -->
    <div class="flex flex-wrap items-center justify-center gap-3">
        <!-- Normal button group -->
        <div class="inline-flex -space-x-0 divide-x divide-gray-300 overflow-hidden rounded-lg border border-gray-300">
            <%= render(ButtonComponent.new(classes: "rounded-none", grouped: true)) { "Oldest" } %>
            <%= render(ButtonComponent.new(classes: "rounded-none", grouped: true)) { "Newest" } %>
            <%= render(ButtonComponent.new(classes: "rounded-none", grouped: true)) { "Top" } %>
        </div>
        <!-- Button group with text and icons -->
        <div class="inline-flex -space-x-0 divide-x divide-gray-300 overflow-hidden rounded-lg border border-gray-300">
            <%= render(ButtonComponent.new(classes: "rounded-none", grouped: true)) do %>
            <%= icon "files", class: "size-4 -ms-1" %>
            Files
            <% end %>
            <%= render(ButtonComponent.new(classes: "rounded-none", grouped: true)) do %>
            <%= icon "movie", class: "size-4 -ms-1" %>
            Media
            <% end %>
            <%= render(ButtonComponent.new(classes: "rounded-none h-9 w-9 px-0 py-0", icon_only: true, grouped: true)) do %>
            <%= icon "dots", class: "size-4" %>
            <% end %>
        </div>
        <!-- Button group with just icons -->
        <div class="inline-flex -space-x-0 divide-x divide-gray-300 overflow-hidden rounded-lg border border-gray-300">
            <%= render(ButtonComponent.new(classes: "rounded-none h-9 w-9 px-0 py-0", icon_only: true, grouped: true)) do %>
            <%= icon "align-left", class: "size-4" %>
            <% end %>
            <%= render(ButtonComponent.new(classes: "rounded-none h-9 w-9 px-0 py-0", icon_only: true, grouped: true)) do %>
            <%= icon "align-center", class: "size-4" %>
            <% end %>
            <%= render(ButtonComponent.new(classes: "rounded-none h-9 w-9 px-0 py-0", icon_only: true, grouped: true)) do %>
            <%= icon "align-right", class: "size-4" %>
            <% end %>
        </div>
    </div>
</div>