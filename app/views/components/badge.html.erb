<!-- Examples of badges with icons -->
<div class="pb-16">
    <div class="flex flex-wrap items-center justify-center gap-3 mb-8">
        <%= render(BadgeComponent.new(color: :zinc, icon: "user")) { "Users" } %>
        <%= render(BadgeComponent.new(color: :orange, icon: "file")) { "Files" } %>
    </div>
    <div class="flex flex-wrap items-center justify-center gap-3 mb-8">
        <%= render(BadgeComponent.new(color: :green, size: :large, icon: "bookmark")) { "Bookmarks" } %>
        <%= render(BadgeComponent.new(color: :blue, size: :large, icon: "calendar-week")) { "Calendar" } %>
    </div>
</div>

<!-- Examples of badges with a close button -->
<div class="pb-16">
    <div class="flex flex-wrap items-center justify-center gap-3 mb-8">
        <%= render(BadgeComponent.new(color: :zinc, icon: nil, closable: true)) { "Admin" } %>
        <%= render(BadgeComponent.new(color: :zinc, size: :large, icon: nil, closable: true)) { "Admin" } %>
    </div>
</div>