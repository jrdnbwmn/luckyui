                                    <div :class="{ '!block': activeTab === 3 }" x-show.transition.in.opacity.duration.600="activeTab === 3" class="hidden">Applications tab content</div>
                                    <div :class="{ '!block': activeTab === 4 }" x-show.transition.in.opacity.duration.600="activeTab === 4" class="hidden">API tab content</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Code section -->
            <div class="relative rounded-b-2xl overflow-hidden flex max-h-80 bg-zinc-50 border-t border-zinc-200">
                <div class="absolute top-0 right-0 pt-[11px] pr-[11px] z-1">
                    <!-- Needs a tooltip on hover and a confirmation when you click it -->
                    <button type="button" class="relative items-center font-medium justify-center gap-2 cursor-pointer whitespace-nowrap disabled:opacity-75 disabled:cursor-default disabled:pointer-events-none h-8 text-sm rounded-md w-8 inline-flex bg-white hover:bg-zinc-100 text-zinc-800 shadow-sm">
                        <%= render 'shared/copyicon' %>
                    </button>
                    <div popover="manual" class="relative py-2 px-2.5 rounded-md text-xs text-white font-medium bg-zinc-800 p-0 overflow-visible" data-flux-tooltip-content="" id="lofi-tooltip-145e57b3415b5" aria-hidden="true" role="tooltip">
                        Copy to clipboard
                    </div>
                </div>
                <div class="text-sm min-w-full max-h-full overflow-auto" style="scrollbar-width: thin;">
                    <div>
                        <!-- Insert code -->
                        <pre><code class="language-html p-6 leading-[1.7] bg-zinc-50 text-zinc-700 text-sm font-mono">&lt;div data-controller=&quot;tabs&quot; data-tabs-active-index-value=&quot;0&quot; data-tabs-active-tab-class-value=&quot;bg-white shadow-md&quot; data-tabs-inactive-tab-class-value=&quot;&quot;&gt;
            &lt;div class=&quot;overflow-hidden inline-block rounded-xl p-1.5 bg-zinc-100&quot;&gt;
                &lt;ul class=&quot;flex items-center gap-1.5 font-medium text-sm&quot; data-action=&quot;keydown-&gt;tabs#onKeydown&quot; role=&quot;tablist&quot;&gt;
                    &lt;li&gt;
                        &lt;a href=&quot;#&quot; data-action=&quot;click-&gt;tabs#selectTab&quot; data-tabs-index-param=&quot;0&quot; data-tabs-target=&quot;tab&quot; class=&quot;inline-flex cursor-pointer items-center gap-2 rounded-lg px-3 py-1.5 hover:bg-white hover:shadow-sm transition-all duration-200&quot;&gt;
                            Preview
                        &lt;/a&gt;
                    &lt;/li&gt;
                    &lt;li&gt;
                        &lt;a href=&quot;#&quot; data-action=&quot;click-&gt;tabs#selectTab&quot; data-tabs-index-param=&quot;1&quot; data-tabs-target=&quot;tab&quot; class=&quot;inline-flex cursor-pointer items-center gap-2 rounded-lg px-3 py-1.5 hover:bg-white hover:shadow-sm transition-all duration-200&quot;&gt;
                            Code
                        &lt;/a&gt;
                    &lt;/li&gt;
